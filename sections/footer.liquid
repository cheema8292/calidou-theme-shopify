<!-- sections/footer.liquid -->
<style>
  .custom-footer {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.section_padding_vertical }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  .custom-footer h5,
  .custom-footer h6 {
    color: {{ section.settings.heading_color }};
    font-weight: {{ section.settings.heading_weight }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
  }

  .custom-footer h5 {
    font-size: {{ section.settings.brand_heading_size }}px;
  }

  .custom-footer h6 {
    font-size: {{ section.settings.column_heading_size }}px;
  }

  .custom-footer .description {
    font-size: {{ section.settings.description_size }}px;
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: {{ section.settings.description_spacing }}px;
    color: {{ section.settings.description_color }};
  }

  .footer-link {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    transition: all 0.3s ease;
    display: block;
    margin-bottom: {{ section.settings.link_spacing }}px;
  }

  .footer-link:hover {
    color: {{ section.settings.link_hover_color }};
    text-decoration: {{ section.settings.link_hover_style }};
    transform: translateX(5px);
  }

  .social-links {
    display: flex;
    gap: {{ section.settings.social_icon_gap }}px;
    margin-top: {{ section.settings.social_icon_spacing }}px;
  }

  .social-link {
    color: {{ section.settings.social_icon_color }} !important;
    font-size: {{ section.settings.social_icon_size }}px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    color: {{ section.settings.social_icon_hover_color }} !important;
    transform: translateY(-2px);
  }

  .footer-divider {
    border-color: {{ section.settings.divider_color }};
    margin: {{ section.settings.divider_spacing }}px 0;
    opacity: {{ section.settings.divider_opacity }};
  }

  .copyright {
    font-size: {{ section.settings.copyright_size }}px;
    color: {{ section.settings.copyright_color }};
    text-align: {{ section.settings.copyright_alignment }};
  }

  @media (max-width: 768px) {
    .custom-footer {
      padding: {{ section.settings.section_padding_vertical_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px;
      text-align: center;
    }
    
    .custom-footer h5 {
      font-size: {{ section.settings.brand_heading_size_mobile }}px;
    }
    
    .custom-footer h6 {
      font-size: {{ section.settings.column_heading_size_mobile }}px;
    }
    
    .custom-footer .description {
      font-size: {{ section.settings.description_size_mobile }}px;
    }
    
    .footer-link {
      font-size: {{ section.settings.link_size_mobile }}px;
    }
    
    .social-links {
      justify-content: center;
    }
    
    .copyright {
      text-align: center;
    }
  }
</style>

<footer class="custom-footer">
  <div class="container p-5">
    <div class="row">
      <!-- Brand Column -->
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold">{{ section.settings.brand_name }}</h5>
        <p class="small description">{{ section.settings.brand_description }}</p>
        <div class="social-links">
          {% for block in section.blocks %}
            {% if block.type == 'social_link' %}
              <a href="{{ block.settings.social_url }}" class="social-link" target="_blank" rel="noopener">
                <i class="{{ block.settings.social_icon }}"></i>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Dynamic Link Columns -->
      {% for block in section.blocks %}
        {% if block.type == 'link_column' %}
          <div class="col-md-3 mb-4">
            <h6 class="fw-bold">{{ block.settings.column_title }}</h6>
            <ul class="list-unstyled small">
              {% for i in (1..5) %}
                {% assign link_text = 'link_text_' | append: i %}
                {% assign link_url = 'link_url_' | append: i %}
                {% if block.settings[link_text] != blank %}
                  <li>
                    <a href="{{ block.settings[link_url] }}" class="footer-link">
                      {{ block.settings[link_text] }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Copyright -->
    <hr class="footer-divider">
    <div class="copyright">
      {{ section.settings.copyright_text }}
    </div>
  </div>
</footer>

