<style>
  .made-in-canada-section {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 0;
  }

  .made-in-canada-section h2 {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: {{ section.settings.heading_spacing }}px;
  }

  .made-in-canada-section .subheading {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    line-height: {{ section.settings.subheading_line_height }};
  }

  .vector-icon img {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: inline-block;
    margin-bottom: {{ section.settings.icon_margin_bottom }}px;
    margin-left: {{ section.settings.icon_margin_left }}px;
    vertical-align: middle;
  }

  .feature-card {
    background: {{ section.settings.card_background }};
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    height: 100%;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .icon-circle {
    width: {{ section.settings.icon_circle_size }}px;
    height: {{ section.settings.icon_circle_size }}px;
    background: {{ section.settings.icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    color: {{ section.settings.icon_color }};
    font-size: {{ section.settings.icon_font_size }}px;
  }

  .feature-card h6 {
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: {{ section.settings.card_title_weight }};
    margin-bottom: 15px;
  }

  .feature-card p {
    color: {{ section.settings.card_text_color }};
    font-size: {{ section.settings.card_text_size }}px;
    line-height: {{ section.settings.card_text_line_height }};
    margin-bottom: 0;
  }

  .quality-section {
    background: {{ section.settings.quality_background }};
    border-radius: {{ section.settings.quality_border_radius }}px;
    overflow: hidden;
    margin-top: {{ section.settings.quality_section_margin }}px;
  }

  .quality-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .quality-content {
    padding: {{ section.settings.quality_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .quality-content h4 {
    color: {{ section.settings.quality_title_color }};
    font-size: {{ section.settings.quality_title_size }}px;
    font-weight: {{ section.settings.quality_title_weight }};
    margin-bottom: 20px;
  }

  .quality-content p {
    color: {{ section.settings.quality_text_color }};
    font-size: {{ section.settings.quality_text_size }}px;
    line-height: {{ section.settings.quality_text_line_height }};
    margin-bottom: 30px;
  }

  .quality-btn {
    border: 2px solid {{ section.settings.quality_button_border }};
    border-radius: 50px;
    padding: 10px 25px;
    color: {{ section.settings.quality_button_text }};
    background: {{ section.settings.quality_button_background }};
    text-decoration: none;
    display: inline-block;
    font-size: {{ section.settings.quality_button_size }}px;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .quality-btn:hover {
    background: {{ section.settings.quality_button_hover_background }};
    color: {{ section.settings.quality_button_hover_text }};
    border-color: {{ section.settings.quality_button_hover_border }};
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .made-in-canada-section {
      padding: 40px 0;
    }
    .quality-content {
      padding: 30px 20px;
    }
    .quality-btn {
      align-self: center;
    }
  }
</style>

<section class="made-in-canada-section">
  <div class="container py-5">
    <!-- Heading -->
    <div class="text-center mb-5">
      <h2 class="fw-bold">
        {{ section.settings.heading_text }} 
        <span class="vector-icon">
          {% if section.settings.vector_icon %}
            <img src="{{ section.settings.vector_icon | img_url: '100x100' }}" alt="{{ section.settings.vector_alt_text }}">
          {% else %}
            <div style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px; background: #ccc; display: inline-block; vertical-align: middle;"></div>
          {% endif %}
        </span>
        {{ section.settings.heading_suffix }}
      </h2>
      <p class="subheading">
        {{ section.settings.subheading_text }}
      </p>
    </div>

    <!-- Feature Cards Row -->
    <div class="row g-4 mb-5">
      {% for block in section.blocks %}
        {% if block.type == 'feature_card' %}
          <div class="col-md-4">
            <div class="feature-card">
              <div class="icon-circle">
                <i class="{{ block.settings.card_icon }}"></i>
              </div>
              <h6 class="fw-bold">{{ block.settings.card_title }}</h6>
              <p class="text-muted mb-0">{{ block.settings.card_description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Quality Section -->
    <div class="row quality-section">
      <div class="col-md-6 p-0">
        {% if section.settings.quality_image %}
          <img src="{{ section.settings.quality_image | img_url: '800x600' }}" alt="{{ section.settings.quality_image.alt }}" loading="lazy">
        {% else %}
          <div style="background: #ddd; height: 400px; display: flex; align-items: center; justify-content: center;">
            <span style="color: #666;">Quality Image</span>
          </div>
        {% endif %}
      </div>
      <div class="col-md-6 quality-content">
        <h4 class="fw-bold">{{ section.settings.quality_title }}</h4>
        <p class="text-muted">
          {{ section.settings.quality_description }}
        </p>
        <a href="{{ section.settings.quality_button_link }}" class="quality-btn">
          {{ section.settings.quality_button_text }}
        </a>
      </div>
    </div>
  </div>
</section>

