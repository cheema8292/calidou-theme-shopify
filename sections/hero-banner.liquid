<!-- sections/hero-banner.liquid -->
<style>
    .custom-hero {
        background: linear-gradient(to bottom, {
                {
                section.settings.gradient_start
            }
        }

        , {
            {
            section.settings.gradient_end
        }
    });
    padding: 40px 0 80px;
    }

    .hero-main {
        min-height: {
                {
                section.settings.min_height
            }
        }

        px;
    }

    .custom-hero h1 {
        font-weight: 700;

        color: {
                {
                section.settings.heading_color
            }
        }

        ;

        font-size: {
                {
                section.settings.heading_size
            }
        }

        px;
    }

    .custom-hero p {
        font-size: {
                {
                section.settings.text_size
            }
        }

        px;
        margin-bottom: 25px;

        color: {
                {
                section.settings.text_color
            }
        }

        ;
    }

    .btn-shop {
        background: {
                {
                section.settings.primary_btn_bg
            }
        }

        ;

        color: {
                {
                section.settings.primary_btn_text
            }
        }

        ;
        border-radius: 50px;
        padding: 10px 25px;
        margin-right: 10px;

        border: 2px solid {
                {
                section.settings.primary_btn_border
            }
        }

        ;
        text-decoration: none;
        display: inline-block;
    }

    .btn-learn {
        border: 2px solid {
                {
                section.settings.secondary_btn_border
            }
        }

        ;
        border-radius: 50px;
        padding: 10px 25px;

        color: {
                {
                section.settings.secondary_btn_text
            }
        }

        ;

        background: {
                {
                section.settings.secondary_btn_bg
            }
        }

        ;
        text-decoration: none;
        display: inline-block;
    }

    .features {
        margin: 20px 0;

        font-size: {
                {
                section.settings.features_font_size
            }
        }

        px;
    }

    .features i {
        color: {
                {
                section.settings.features_icon_color
            }
        }

        ;
        margin-right: 6px;
    }

    .product-images img {
        width: {
                {
                section.settings.product_image_size
            }
        }

        px;
        margin: 15px auto;
        display: block;
        transition: transform 0.3s ease-in-out;
    }

    .product-images img:hover {
        transform: rotate(0deg) scale(1.05);
    }
</style>

<section class="custom-hero">
    <div class="container">
        <!-- Features -->
        <div class="text-center features d-flex flex-wrap justify-content-center mb-4">
            {% for block in section.blocks %}
            {% if block.type == 'feature' %}
            <div class="mx-3">
                <i class="bi bi-check-circle-fill"></i> {{ block.settings.feature_text }}
            </div>
            {% endif %}
            {% endfor %}
        </div>

        <!-- Hero Content -->
        <div class="row align-items-center hero-main">
            <div class="col-md-6">
                <h1>{{ section.settings.heading }}</h1>
                <p>{{ section.settings.description }}</p>
                <a href="{{ section.settings.primary_button_link }}" class="btn-shop">
                    {{ section.settings.primary_button_text }}
                </a>
                <a href="{{ section.settings.secondary_button_link }}" class="btn-learn">
                    {{ section.settings.secondary_button_text }}
                </a>
            </div>

            <!-- Product Images Grid -->
            <div class="col-md-6">
                <div class="row text-center product-images">
                    {% for block in section.blocks %}
                    {% if block.type == 'product_image' %}
                    <div class="col-3 {% if block.settings.center_align %}d-flex align-items-center{% endif %}">
                        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"
                            loading="lazy">
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

