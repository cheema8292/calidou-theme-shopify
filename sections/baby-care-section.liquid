<!-- sections/baby-care-section.liquid -->
<style>
  .baby-care-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 0;
  }

  .baby-care-section .badge-text {
    color: {{ section.settings.badge_color }} !important;
    font-weight: {{ section.settings.badge_weight }};
    font-size: {{ section.settings.badge_size }}px;
    text-transform: {{ section.settings.badge_transform }};
    margin-bottom: {{ section.settings.badge_spacing }}px;
    display: block;
  }

  .baby-care-section h1 {
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: {{ section.settings.heading_spacing }}px;
    line-height: {{ section.settings.heading_line_height }};
  }

  .baby-care-section .description {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: {{ section.settings.text_line_height }};
    margin-bottom: {{ section.settings.text_spacing }}px;
  }

  .baby-care-section .btn-primary {
    background: {{ section.settings.button_background }};
    border-color: {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    border-width: {{ section.settings.button_border_width }}px;
  }

  .baby-care-section .btn-primary:hover {
    background: {{ section.settings.button_hover_background }};
    border-color: {{ section.settings.button_hover_border_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-{{ section.settings.button_hover_lift }}px);
  }

  .baby-care-section img {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: {{ section.settings.image_fit }};
  }

  .baby-care-content {
    padding: {{ section.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
  }

  @media (max-width: 768px) {
    .baby-care-section {
      padding: {{ section.settings.section_padding_mobile }}px 0;
      text-align: center;
    }
    
    .baby-care-section h1 {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }
    
    .baby-care-section .badge-text {
      font-size: {{ section.settings.badge_size_mobile }}px;
    }
    
    .baby-care-section .description {
      font-size: {{ section.settings.text_size_mobile }}px;
    }
    
    .baby-care-section img {
      height: {{ section.settings.image_height_mobile }}px;
    }
    
    .baby-care-content {
      padding: {{ section.settings.content_padding_mobile }}px;
    }
  }

  @media (min-width: 769px) {
    .baby-care-content {
      text-align: {{ section.settings.text_alignment }};
    }
  }
</style>

<section class="baby-care-section">
  <div class="container-fluid">
    <div class="row align-items-center">
      <!-- Left Image -->
      <div class="col-md-6 mb-4 mb-md-0 p-0 m-0">
        {% if section.settings.baby_care_image %}
          <img 
            src="{{ section.settings.baby_care_image | img_url: '1200x800' }}" 
            alt="{{ section.settings.image_alt_text }}" 
            loading="lazy"
          >
        {% else %}
          <div style="background: #ddd; height: {{ section.settings.image_height }}px; display: flex; align-items: center; justify-content: center;">
            <span style="color: #666;">Baby Care Image</span>
          </div>
        {% endif %}
      </div>
      
      <!-- Right Text -->
      <div class="col-md-6">
        <div class="baby-care-content">
          <span class="badge-text">{{ section.settings.badge_text }}</span>
          <h1 class="fw-bold mb-3">{{ section.settings.heading_text }}</h1>
          <p class="description mb-4">{{ section.settings.description_text }}</p>
          <a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.button_text }}</a>
        </div>
      </div>
    </div>
  </div>
</section>

