<style>
  .additional-collections-section {
    padding: {{ section.settings.section_padding }}px 0;
    background: {{ section.settings.background_color }};
  }

  .section-header {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin-bottom: 0;
  }

  .explore-btn {
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border-radius: 50px;
    padding: 10px 25px;
    border: 2px solid {{ section.settings.button_border_color }};
    text-decoration: none;
    display: inline-block;
    font-size: {{ section.settings.button_font_size }}px;
    transition: all 0.3s ease;
  }

  .explore-btn:hover {
    background: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  /* Collection Grid Styles */
  .collection-item {
    position: relative;
    overflow: hidden;
    height: {{ section.settings.collection_height }}px;
  }

  .collection-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .collection-overlay {
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.4s ease;
    text-align: center;
    padding: 20px;
  }

  .collection-overlay h3 {
    margin-bottom: 15px;
    font-weight: {{ section.settings.overlay_title_weight }};
    font-size: {{ section.settings.overlay_title_size }}px;
    color: {{ section.settings.overlay_text_color }};
  }

  .collection-overlay .btn {
    background: {{ section.settings.overlay_button_background }};
    color: {{ section.settings.overlay_button_text_color }};
    border: 2px solid {{ section.settings.overlay_button_border }};
    border-radius: 50px;
    padding: 8px 20px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .collection-overlay .btn:hover {
    background: {{ section.settings.overlay_button_hover_background }};
    color: {{ section.settings.overlay_button_hover_text_color }};
    border-color: {{ section.settings.overlay_button_hover_border }};
  }

  .collection-item:hover img {
    transform: scale(1.05);
  }

  .collection-item:hover .collection-overlay {
    opacity: 1;
  }

  /* Guarantee Banner */
  .guarantee-banner {
    background: {{ section.settings.guarantee_background }};
    color: {{ section.settings.guarantee_text_color }};
    padding: {{ section.settings.guarantee_padding }}px;
    text-align: center;
    margin: {{ section.settings.guarantee_margin }}px 0;
    border-radius: {{ section.settings.guarantee_border_radius }}px;
  }

  .guarantee-banner h4 {
    font-size: {{ section.settings.guarantee_title_size }}px;
    font-weight: {{ section.settings.guarantee_title_weight }};
    margin-bottom: 15px;
    color: {{ section.settings.guarantee_title_color }};
  }

  .guarantee-banner p {
    font-size: {{ section.settings.guarantee_text_size }}px;
    margin-bottom: 20px;
    line-height: {{ section.settings.guarantee_line_height }};
  }

  .guarantee-banner .btn {
    background: {{ section.settings.guarantee_button_background }};
    color: {{ section.settings.guarantee_button_text_color }};
    border-radius: 50px;
    padding: 10px 25px;
    border: 2px solid {{ section.settings.guarantee_button_border }};
    text-decoration: none;
    display: inline-block;
  }

  .guarantee-banner .btn:hover {
    background: {{ section.settings.guarantee_button_hover_background }};
    color: {{ section.settings.guarantee_button_hover_text_color }};
    border-color: {{ section.settings.guarantee_button_hover_border }};
  }

  /* Info Grid Styles */
  .info-grid .block {
    padding: {{ section.settings.info_block_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: {{ section.settings.info_block_height }}px;
  }

  .info-grid .bg-lightblue {
    background: {{ section.settings.info_lightblue_bg }};
  }

  .info-grid .bg-darkblue {
    background: {{ section.settings.info_darkblue_bg }};
  }

  .info-grid .bg-beige {
    background: {{ section.settings.info_beige_bg }};
  }

  .info-grid .block h3 {
    font-size: {{ section.settings.info_title_size }}px;
    font-weight: {{ section.settings.info_title_weight }};
    margin-bottom: 15px;
    color: {{ section.settings.info_title_color }};
  }

  .info-grid .bg-darkblue h3 {
    color: {{ section.settings.info_dark_title_color }};
  }

  .info-grid .block p {
    font-size: {{ section.settings.info_text_size }}px;
    margin-bottom: 20px;
    line-height: {{ section.settings.info_line_height }};
    color: {{ section.settings.info_text_color }};
  }

  .info-grid .bg-darkblue p {
    color: {{ section.settings.info_dark_text_color }};
  }

  .info-grid .block .btn {
    border-radius: 50px;
    padding: 8px 20px;
    text-decoration: none;
    display: inline-block;
    align-self: flex-start;
  }

  .info-grid img {
    width: 100%;
    height: {{ section.settings.info_block_height }}px;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .collection-item {
      height: {{ section.settings.collection_height_mobile }}px;
    }
    
    .info-grid .block,
    .info-grid img {
      height: {{ section.settings.info_block_height_mobile }}px;
    }
    
    .guarantee-banner {
      padding: {{ section.settings.guarantee_padding_mobile }}px;
    }
  }
</style>

<section class="additional-collections-section mt-5">
  <div class="container-fluid">
    <!-- Section Header -->
    <div class="container d-flex justify-content-between align-items-center mb-4">
      <h3 class="section-header">{{ section.settings.section_title }}</h3>
      <a href="{{ section.settings.explore_link }}" class="explore-btn">{{ section.settings.explore_text }}</a>
    </div>

    <!-- Collections Grid -->
    <div class="row g-3 collection-grid">
      {% for block in section.blocks %}
        {% if block.type == 'collection_item' %}
          <div class="col-md-6 p-0 m-0">
            <div class="collection-item">
              {% if block.settings.collection_image %}
                <img src="{{ block.settings.collection_image | img_url: '800x600' }}" alt="{{ block.settings.collection_title }}" loading="lazy">
              {% else %}
                <div style="background: #ddd; height: 100%; display: flex; align-items: center; justify-content: center;">
                  <span style="color: #666;">Collection Image</span>
                </div>
              {% endif %}
              <div class="collection-overlay">
                <h3 class="text-white">{{ block.settings.collection_title }}</h3>
                <a href="{{ block.settings.collection_link }}" class="btn btn-light">{{ block.settings.button_text }}</a>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      <!-- Guarantee Banner -->
      {% if section.settings.show_guarantee %}
        <div class="guarantee-banner">
          <h4>{{ section.settings.guarantee_title }}</h4>
          <p>{{ section.settings.guarantee_description }}</p>
          <a href="{{ section.settings.guarantee_link }}" class="btn">{{ section.settings.guarantee_button_text }}</a>
        </div>
      {% endif %}
    </div>

    <!-- Info Grid -->
    {% if section.settings.show_info_grid %}
      <div class="container mt-5">
        <div class="row g-3 info-grid">
          {% for block in section.blocks %}
            {% if block.type == 'info_block' %}
              <div class="col-md-5 p-0 m-0">
                <div class="block {{ block.settings.background_color }} h-100">
                  <h3{% if block.settings.background_color == 'bg-darkblue' %} class="text-light"{% endif %}>{{ block.settings.info_title }}</h3>
                  <p{% if block.settings.background_color == 'bg-darkblue' %} class="text-light"{% endif %}>{{ block.settings.info_description }}</p>
                  <a href="{{ block.settings.info_link }}" class="btn{% if block.settings.background_color == 'bg-darkblue' %} btn-light{% else %} btn-shop{% endif %}">
                    {{ block.settings.info_button_text }}
                  </a>
                </div>
              </div>
            {% elsif block.type == 'info_image' %}
              <div class="col-md-5 p-0 m-0">
                {% if block.settings.info_image %}
                  <img src="{{ block.settings.info_image | img_url: '600x400' }}" alt="{{ block.settings.info_alt }}" loading="lazy">
                {% else %}
                  <div style="background: #eee; height: 100%; display: flex; align-items: center; justify-content: center;">
                    <span style="color: #666;">Info Image</span>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

