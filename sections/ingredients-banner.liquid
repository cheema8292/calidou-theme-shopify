<!-- sections/ingredients-banner.liquid -->
<style>
  .ingredients-banner {
    background: {% if section.settings.background_image %}url("{{ section.settings.background_image | img_url: '2000x' }}"){% else %}{{ section.settings.background_color }}{% endif %} center/cover no-repeat;
    padding: {{ section.settings.section_padding }}px 20px;
    text-align: {{ section.settings.text_alignment }};
    color: #fff;
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    margin: {{ section.settings.section_margin }}px 0;
    min-height: {{ section.settings.min_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ section.settings.text_alignment }};
  }

  .ingredients-banner::after {
    content: "";
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    border-radius: {{ section.settings.border_radius }}px;
    z-index: 1;
  }

  .ingredients-banner > * {
    position: relative;
    z-index: 2;
  }

  .ingredients-banner h1 {
    color: {{ section.settings.heading_color }};
    font-weight: {{ section.settings.heading_weight }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: {{ section.settings.heading_spacing }}px;
    line-height: {{ section.settings.heading_line_height }};
  }

  .ingredients-banner .btn-ingredients {
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    text-decoration: none;
    font-weight: {{ section.settings.button_font_weight }};
    font-size: {{ section.settings.button_font_size }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    display: inline-block;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
  }

  .ingredients-banner .btn-ingredients:hover {
    background: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-{{ section.settings.button_hover_lift }}px);
    box-shadow: 0 {{ section.settings.button_hover_lift }}px 15px rgba(0, 0, 0, 0.2);
  }

  /* Optional decorative elements */
  {% if section.settings.show_decoration %}
    .ingredients-banner::before {
      content: "";
      position: absolute;
      top: 20px;
      left: 20px;
      right: 20px;
      bottom: 20px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: {{ section.settings.border_radius | minus: 4 }}px;
      z-index: 1;
      pointer-events: none;
    }
  {% endif %}

  @media (max-width: 768px) {
    .ingredients-banner {
      padding: {{ section.settings.section_padding_mobile }}px 20px;
      min-height: {{ section.settings.min_height_mobile }}px;
    }
    
    .ingredients-banner h1 {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }
    
    .ingredients-banner .btn-ingredients {
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }
</style>

<section class="ingredients-banner">
  <h1 class="fw-bold mb-3">{{ section.settings.heading_text }}</h1>
  <a href="{{ section.settings.button_link }}" class="btn-ingredients">
    {{ section.settings.button_text }}
  </a>
</section>

