<!-- sections/comparison-section.liquid -->
<style>
  .comparison-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 0;
  }

  .comparison-section h1 {
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: {{ section.settings.heading_spacing }}px;
    line-height: {{ section.settings.heading_line_height }};
  }

  .comparison-section p {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: {{ section.settings.text_line_height }};
    margin-bottom: {{ section.settings.paragraph_spacing }}px;
  }

  .comparison-section strong {
    color: {{ section.settings.strong_text_color }};
    font-weight: {{ section.settings.strong_text_weight }};
  }

  .comparison-section img {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: {{ section.settings.image_fit }};
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .comparison-content {
    padding: {{ section.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
  }

  @media (max-width: 768px) {
    .comparison-section {
      padding: {{ section.settings.section_padding_mobile }}px 0;
    }
    
    .comparison-section h1 {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }
    
    .comparison-section p {
      font-size: {{ section.settings.text_size_mobile }}px;
    }
    
    .comparison-section img {
      height: {{ section.settings.image_height_mobile }}px;
    }
    
    .comparison-content {
      padding: {{ section.settings.content_padding_mobile }}px;
      text-align: center;
    }
  }
</style>

<section class="comparison-section">
  <div class="container-fluid">
    <div class="row align-items-center g-4">
      <!-- Text Content -->
      <div class="col-md-6">
        <div class="comparison-content">
          <h1>{{ section.settings.heading_text }}</h1>
          {% for block in section.blocks %}
            {% if block.type == 'paragraph' %}
              <p>
                {% if block.settings.show_strong %}
                  <strong>{{ block.settings.strong_text }}</strong>
                {% endif %}
                {{ block.settings.paragraph_text }}
              </p>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      
      <!-- Image -->
      <div class="col-md-6 m-0 p-0">
        {% if section.settings.comparison_image %}
          <img 
            src="{{ section.settings.comparison_image | img_url: '1200x800' }}" 
            alt="{{ section.settings.image_alt_text }}" 
            loading="lazy"
          >
        {% else %}
          <div style="background: #ddd; height: {{ section.settings.image_height }}px; display: flex; align-items: center; justify-content: center; border-radius: {{ section.settings.image_border_radius }}px;">
            <span style="color: #666;">Comparison Image</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

