<!-- sections/safety-section.liquid -->
<style>
  .safety-section {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 0;
  }

  .safety-title {
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_weight }};
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: {{ section.settings.title_spacing }}px;
    text-align: {{ section.settings.title_alignment }};
  }

  .safety-list {
    list-style: none;
    padding-left: 0;
  }

  .safety-list li {
    margin-bottom: {{ section.settings.list_item_spacing }}px;
    font-size: {{ section.settings.list_font_size }}px;
    position: relative;
    padding-left: {{ section.settings.list_icon_size | plus: 10 }}px;
    color: {{ section.settings.list_text_color }};
    line-height: {{ section.settings.list_line_height }};
  }

  .safety-list li:before {
    content: "{{ section.settings.list_icon }}";
    color: {{ section.settings.list_icon_color }};
    background-color: {{ section.settings.list_icon_background }};
    font-weight: {{ section.settings.list_icon_weight }};
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: {{ section.settings.list_icon_size }}px;
    height: {{ section.settings.list_icon_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.list_icon_font_size }}px;
  }

  .no-list {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.no_items_gap }}px;
    justify-content: {{ section.settings.no_items_alignment }};
    text-align: center;
    margin: {{ section.settings.no_list_margin }}px auto;
  }

  .no-item {
    flex: 0 0 {{ section.settings.no_item_width }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: {{ section.settings.no_item_padding }}px;
    border-radius: {{ section.settings.no_item_radius }}px;
    background: {{ section.settings.no_item_background }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .no-item:hover {
    transform: translateY(-{{ section.settings.no_item_hover_lift }}px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .no-icon {
    width: {{ section.settings.no_icon_size }}px;
    height: {{ section.settings.no_icon_size }}px;
    background: {{ section.settings.no_icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.no_icon_font_size }}px;
    color: {{ section.settings.no_icon_color }};
    position: relative;
    margin-bottom: {{ section.settings.no_icon_spacing }}px;
    transition: all 0.3s ease;
  }

  .no-icon:hover {
    background: {{ section.settings.no_icon_hover_background }};
    color: {{ section.settings.no_icon_hover_color }};
    transform: scale(1.1);
  }

  {% if section.settings.show_strikethrough %}
    .no-icon::after {
      content: "";
      position: absolute;
      width: {{ section.settings.strikethrough_width }}%;
      height: {{ section.settings.strikethrough_thickness }}px;
      background: {{ section.settings.strikethrough_color }};
      transform: rotate(-45deg);
    }
  {% endif %}

  .no-text {
    margin-top: {{ section.settings.no_text_spacing }}px;
    font-weight: {{ section.settings.no_text_weight }};
    color: {{ section.settings.no_text_color }};
    font-size: {{ section.settings.no_text_size }}px;
    line-height: {{ section.settings.no_text_line_height }};
  }

  @media (max-width: 768px) {
    .safety-title {
      font-size: {{ section.settings.title_size_mobile }}px;
      margin-bottom: {{ section.settings.title_spacing_mobile }}px;
    }
    
    .no-list {
      gap: {{ section.settings.no_items_gap_mobile }}px;
      margin: {{ section.settings.no_list_margin_mobile }}px auto;
    }
    
    .no-item {
      flex: 0 0 {{ section.settings.no_item_width_mobile }}px;
    }
    
    .no-icon {
      width: {{ section.settings.no_icon_size_mobile }}px;
      height: {{ section.settings.no_icon_size_mobile }}px;
      font-size: {{ section.settings.no_icon_font_size_mobile }}px;
    }
    
    .no-text {
      font-size: {{ section.settings.no_text_size_mobile }}px;
    }
    
    .safety-list li {
      font-size: {{ section.settings.list_font_size_mobile }}px;
    }
  }
</style>

<section class="safety-section">
  <div class="container">
    <div class="row align-items-center">
      <!-- Section Title -->
      <h1 class="safety-title">{{ section.settings.title_text }}</h1>
      
      <!-- No List Section -->
      <div class="col-md-6">
        <div class="no-list">
          {% for block in section.blocks %}
            {% if block.type == 'no_item' %}
              <div class="no-item">
                <div class="no-icon">
                  <i class="{{ block.settings.item_icon }}"></i>
                </div>
                <div class="no-text">{{ block.settings.item_text }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Safety List Section -->
      <div class="col-md-6">
        <ul class="safety-list">
          {% for block in section.blocks %}
            {% if block.type == 'safety_item' %}
              <li>{{ block.settings.safety_text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

